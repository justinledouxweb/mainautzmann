<section class="section section__teal section__pattern" id="contact" contact-form>
  <div class="container">
    <h2>Contact</h2>

    <div class="flash" ng-class="{
      'flash--error': $ctrl.formPostError,
      'flash--success': $ctrl.formPostSuccess,
    }">
      <p ng-if="$ctrl.formPostError">An error occured when sending this message. Please try again.</p>
      <p ng-if="$ctrl.formPostSuccess">Thanks for contacting me! Your message was successfully sent.</p>
    </div>

    <form
      class="contact row"
      name="form"
      ng-submit="$ctrl.submit(form)"
      novalidate>
      <input type="hidden" name="" value="">

      <div class="col-sm-5 col-md-4">
        <label for="full-name">Full name</label>
        <input
          type="text"
          name="fullName"
          id="full-name"
          required
          ng-model="$ctrl.formData.fullName">

        <ng-messages for="form.fullName.$error">
          <ng-message when="required">This field is required.</ng-message>
        </ng-messages>

        <label for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          required
          ng-model="$ctrl.formData.email">

        <ng-messages for="form.email.$error">
          <ng-message when="required">This field is required.</ng-message>
          <ng-message when="email">Please enter a valid email address.</ng-message>
        </ng-messages>

        <label for="phone-number">
          Phone number <span>(optional)</span>
        </label>
        <input
          type="text"
          name="phone-number"
          id="phone-number"
          ng-model="$ctrl.formData.phoneNumber">
      </div>

      <div class="col-sm-7 col-md-8">
        <label for="message">Message</label>
        <textarea
          name="message"
          id="message"
          class="contact__message"
          required
          ng-model="$ctrl.formData.message">
        </textarea>

        <ng-messages for="form.message.$error">
          <ng-message when="required">This field is required.</ng-message>
        </ng-messages>
      </div>

      <div class="col-xs-12 contact__btn">
        <button type="submit" class="contact__send">Send</button>
      </div>
    </form>
  </div>
</section>

